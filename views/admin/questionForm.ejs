<% layout('/layouts/adminBoilerplate.ejs') %>
<div class="row q">
    <div class="col-8 offset-2">
        <br><br>
        <h3>Create a New Question <%chapterId%></h3>
        <br>
        <form action="/Gamedify/admin/<%=chapterId%>/question/new" method="POST" novalidate class="needs-validation" >
        
            <div class="mb-3">
                <label for="title" class="form-label">Question</label>
                <textarea type="text" id="title" name="Ques[question]"  placeholder="" class="form-control" required></textarea>
                <div class="invalid-feedback">Enter Question</div>
            </div>

            <div class="mb-3 col-6">
                <label for="opt" class="form-label">Options</label>
                <input type="text" class="form-control mb-2" name="option[]" id="opt" required>
                <input type="text" class="form-control mb-2" name="option[]" id="opt" required>
                <input type="text" class="form-control mb-2" name="option[]" id="opt">
                <input type="text" class="form-control mb-2" name="option[]" id="opt">
                <div class="invalid-feedback">Give atleast 2 options</div>
            </div>

            <div class="mb-3 col-6">
                <label for="ans" class="form-label">Correct Answer</label>
                <input type="text" class="form-control" name="Ques[answer]" id="ans" required>
            </div>
            <br>
            <button class="btn btn-dark add-btn">Add</button>
            <br><br>
        </form>
    </div>
</div>

