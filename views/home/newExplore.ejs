<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anta&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/css/style5.css">
    
    <title>Gamedify</title>
</head>
<body>

    <%- include('../includes/start-navbar.ejs') %>

    <div class="big-container">

        <a href="#searchText" onClick="visiteThis('searchText')">
            <div class="iconSearch">
                <i class="fa-solid fa-magnifying-glass"></i>
            </div>
        </a>

        <div class="searchoption">
            <form action="/Gamedify/search" method="get">
                <input type="text" name="s" id="search1" placeholder="search course ......" required>
                <button class="searchbtn">Search</button>
            </form>
        </div>
        
        <div class="upbar">
            <div id="upbarpart-1"><a class="navbar-brand" href="/Gamedify/explore">Gamedify</a></div>
            <div id="upbarpart-2">
                <div class="a" id="aa"><a href="/Gamedify/explore"><div id="b">Explore</div></a></div>
                <div class="a" id="bb"><a href="/Gamedify/doubtQues"><div id="c">Doubt Ques</div></a></div>
            </div>
            <div id="upbarpart-3" >
                <% if(currUser){ %>
                    <a href="/Gamedify/userInfo">@<%=currUser.username%></a>
                <% } %>
                <a id="ssside" href="/Gamedify/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
            </div>
        </div>

        <div class="explore">
            <% if(courses.length>0){ %>
                <% for(let course of courses){ %>
                <a href="/Gamedify/course/<%=course._id%>/chapter"><div class="course-box ">
                        <div id="a"><div class="insidea"><b><%=course.courseName%></b></div></div>
                        <div id="b"><%=course.aboutCourse%></div>
                </div> </a>
                <% } %>
            <% } %>
        </div>

        <div class="doubtQues">
            <form action="/Gamedify/doubtQues" method="post" novalidate class="needs-validation">
                <textarea type="text" class="doubtQuestion" name="doubtques" placeholder="Type your doubt question........." required></textarea> <br>
                <div class="invalid-feedback">Write Question for submission</div>
                <input type="submit" class="doubtbtn">
                <i id='icon1' class="fa-solid fa-xmark"></i>
            </form>
        </div>

        <div class="footer">
            <div class="writeDoubt">
                <form action="/Gamedify/doubtQues" method="post" novalidate class="needs-validation">
                    <textarea type="text" class="writeArea"  name="doubtques" placeholder="Type your doubt question........." required></textarea> <br>
                    <div class="invalid-feedback">Write Question for submission</div>
                    <input type="submit" class="writeBtn" >
                </form>
            </div>
        </div>

        <div id="searchText">
            <form action="/Gamedify/search" method="get">
                <input type="text" name="s" id="search1" placeholder="search course ......" required>
                <button class="searchbtn">Search</button>
            </form>
        </div>

    </div>

    <script src="/js/script.js"></script>
    <script src="/js/startScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    
    </body>
    </html>    